{% extends "layout.njk" %} <!-- importa o layout.html para essa página -->

{% block head%}
    <title>Sobre - {{ about.name }}</title>
{% endblock %}

{% block content %} <!-- leva esse bloco de conteúdo para a página layout.html -->

        <div id="wrapper">
            <img src="{{ about.avatar_url }}" alt="Imagem de {{ about.name }}">
            <h1>{{ about.name }}</h1>
            <h2>{{ about.role }}</h2>
            <p>{{ about.description }}</p>
        </div>

        <div id="links-footer" class="links">
            {% for link in about.links %}
            <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
            {% endfor %}
        </div>

{% endblock %}