{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="post" action="/teachers">
        <section class="avatar"></section>
        
        
        <section class="details">
            
            <h3>Novo Professor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <input 
                    type="url"
                    name="avatar_url"
                    placeholder="http://"
                >
            </div>

            <div class="item">
                <div>Nome completo</div>
                <input
                    type="text"
                    name="name"
                    placeholder="Nome do Professor"
                    >
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <input
                    type="date"
                    name="birth"
                    >
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <select name="schooling">
                    <option value=null></option>
                    <option value="Médio">Ensino Médio Completo</option>
                    <option value="Superior">Ensino Superior Completo</option>
                    <option value="Mestrado">Mestrado</option>
                    <option value="Doutorado">Doutorado</option>
                </select>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="class_type" value="P" checked>Presencial</span>
                    <span><input type="radio" name="class_type" value="D">À Distância</span>
                </div>
            </div>

            <div class="item">
                <div>Área de Atuação</div>
                <input
                    type="text"
                    name="occupation"
                    placeholder="Separe as ocupações por vírgula"
                    >
            </div>

            <button type="submit">Salvar</button>

        </section>
    </form>

{% endblock content %}