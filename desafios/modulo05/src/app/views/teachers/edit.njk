{% extends "layout.njk" %}

{% block content %}
    
    <div class="card">

        <section
            class="avatar"
            style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"
        >
        </section>

        <section class="details">
            
            <h3>Editar Professor</h3>

            <form id="edit" action="/teachers?_method=put" method="post">

            {% include 'teachers/fields.njk' %}  

            <div class="buttons">
                
                <button type="submit" form="edit">Salvar</button>
                
                <button type="submit" form="form-delete">Deletar</button>
                
            </div>

            </form>           

            <form id="form-delete" action="/teachers?_method=delete" method="post">
            </form>

            <input
                    type="hidden"
                    name="id"
                    value="{{ teacher.id }}"
                    form="edit"
                >

            <input
                    type="hidden"
                    name="id"
                    value="{{ teacher.id }}"
                    form="form-delete"
                >

        </section>

    </div>

{% endblock content %}