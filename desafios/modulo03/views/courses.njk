{% extends 'layout.njk' %}

{% block head %}
    <title>Rocketseat | Conte√∫dos</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock head %}

{% block body %}
    <body class="contents">
{% endblock body %}

{% block content %}

    <section class="contents">
        <div class="cards">

            {% for course in courses %}

            <div class="card" id="{{ course.name }}">

                <div class="card__image-container">
                    <img src="{{ course.img_url }}" alt="Imagem de {{ course.name }}">
                </div>

                <div class="card__info">
                    <p>{{ course.modules }}</p>
                    <p class="card__price">{{ course.price}}</p>
                </div>
            </div>

            {% endfor %}

        </div>
    </section>

    <div class="modal-overlay">
        <div class="modal">

            <div class="buttons">
                <a class="fullscreen">
                    <i class="material-icons">fullscreen</i>
                </a>
                <a class="close">
                    <i class="material-icons">close</i>
                </a>
            </div>

            <iframe src="" frameborder="0"></iframe>

        </div>
    </div>

{% endblock content %}

{% block scripts %}
    <script src="scripts.js"></script>
{% endblock scripts %}
